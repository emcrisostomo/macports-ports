go.setup            github.com/rhysd/actionlint 1.6.27 v
github.tarball_from archive
revision            0

description         Static checker for GitHub Actions workflow files

long_description    {*}${description}

categories          devel
installs_libs       no
license             MIT
maintainers         {gmail.com:herby.gillot @herbygillot} \
                    openmaintainer

build.cmd           make
build.target        build

depends_build-append \
    port:go-md2man

patch {
    reinplace \
        "s|go build|go build -ldflags '-X ${go.package}.version=v${version}'|" \
        ./Makefile
}

post-build {
    system -W ${worksrcpath}/man "go-md2man -in ${name}.1.ronn -out ${name}.1"
}

destroot {
    xinstall -m 0755 ${worksrcpath}/${name} ${destroot}${prefix}/bin/
    xinstall -m 0644 ${worksrcpath}/man/${name}.1 \
        ${destroot}${prefix}/share/man/man1/
}

