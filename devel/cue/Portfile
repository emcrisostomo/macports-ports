github.livecheck.regex  {([0-9.]+)}

pre-build {
    file mkdir ${worksrcpath}/_dist
}

destroot {
    xinstall -m 0755 ${worksrcpath}/_dist/${name} ${destroot}${prefix}/bin/
}
