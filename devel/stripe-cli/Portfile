                    size    1871725

# disable stripe telemetry which is otherwise enabled by default
patchfiles          patch-disable-telemetry.diff

build.cmd           make
build.target        build

destroot {
    xinstall -m 0755 ${worksrcpath}/stripe ${destroot}${prefix}/bin/
}
