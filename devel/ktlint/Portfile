PortSystem          1.0
PortGroup           github 1.0
PortGroup           java 1.0

github.setup        pinterest ktlint 1.1.0
github.tarball_from releases

distfiles           ${name}
dist_subdir         ${name}/${version}

categories          devel java
platforms           {darwin any}
supported_archs     noarch

maintainers         {amake @amake} openmaintainer
license             MIT
homepage            https://pinterest.github.io/ktlint/

description         An anti-bikeshedding Kotlin linter with built-in formatter
long_description    {*}${description}

checksums           rmd160  5779cf147373abd5c96b4fde953882346f2316d2 \
                    sha256  67231a8a2ac724e2ef411abe95043eb73f8b9ee803db559a33821e5361e018af \
                    size    70268809

extract.only
use_configure       no

java.version        1.8+
java.fallback       openjdk8

build {}

destroot {
    xinstall -m 0755 ${distpath}/${distfiles} ${destroot}${prefix}/bin
}

github.livecheck.regex  {([^"-]+)}
