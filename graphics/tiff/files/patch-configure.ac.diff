Prevent configure script from assuming that if we don't want X11, then
we don't want OpenGL either.
--- configure.ac.orig	2021-04-16 05:54:59.000000000 -0500
+++ configure.ac	2021-04-25 05:33:51.000000000 -0500
@@ -929,7 +929,7 @@
 dnl AX_CHECK_GLUT sets GLUT_CFLAGS & GLUT_LIBS
 AX_CHECK_GLUT
 
-if test "$no_x" != "yes" -a "$no_gl" != "yes" \
+if test "$no_gl" != "yes" \
 	-a "$no_glu" != "yes" -a "$no_glut" != "yes" ; then
   HAVE_OPENGL=yes
 fi
