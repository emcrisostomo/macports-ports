use_parallel_build  no

patch {
    reinplace \
        "s|^TAG = .*|TAG = ${github.tag_prefix}${version}|" \
        ${worksrcpath}/Makefile
}

destroot {
    xinstall -m 0755 ${worksrcpath}/${name} ${destroot}${prefix}/bin/
}

github.livecheck.regex \
                    {([\d.]+)}
