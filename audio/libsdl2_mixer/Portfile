PortSystem      1.0
PortGroup       github 1.0

name            libsdl2_mixer
github.setup    libsdl-org SDL_mixer 2.6.0 release-
categories      audio devel
license         zlib
maintainers     {jmr @jmroot} openmaintainer
description     Audio mixer library for SDL

long_description \
    A sample multi-channel audio mixer library. It supports any number of \
    simultaneously playing channels of 16 bit stereo audio, plus a single \
    channel of music.

github.tarball_from releases
distname        SDL2_mixer-${version}

checksums       rmd160 0b460b5faeca949a4003bf1464bda9d43aaeacce \
                sha256 f94a4d3e878cb191c386a714be561838240012250fe17d496f4ff4341d59a391

depends_build   port:pkgconfig
depends_lib     port:libsdl2 \
                port:libmodplug \
                port:opusfile

configure.args  --disable-sdltest \
                --disable-music-midi-fluidsynth \
                --disable-music-mod-modplug-shared \
                --disable-music-opus-shared

compiler.blacklist *gcc* { clang < 211 }

post-destroot {
    set docdir ${prefix}/share/doc/${name}
    xinstall -d ${destroot}${docdir}
    xinstall -m 0644 -W ${worksrcpath} CHANGES.txt LICENSE.txt README.txt \
        ${destroot}${docdir}
}
